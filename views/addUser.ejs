<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management - Add</title>
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/menu') %>

  <h1>Add User</h1>
  <!-- Add your form for adding a user -->

  <!-- USER_USERNAME, USER_FULL_NAME, USER_PROFILE_PICTURE, USER_BIO, USER_EMAIL, USER_PASSWORD, USER_DOB -->

  <form action="/api/users/signup" method="POST">
    <label for="userName">Username</label>
    <input type="text" name="USER_USERNAME" id="userName" required>
    <br>
    <label for="fullName">Full Name</label>
    <input type="text" name="USER_FULL_NAME" id="fullName" required>
    <br>
    <label for="profilePicture">Profile Picture</label>
    <input type="text" name="USER_PROFILE_PICTURE" id="profilePicture" required>
    <br>
    <label for="bio">Bio</label>
    <input type="text" name="USER_BIO" id="bio" required>
    <br>
    <label for="email">Email</label>
    <input type="text" name="USER_EMAIL" id="email" required>
    <br>
    <label for="password">Password</label>
    <input type="text" name="USER_PASSWORD" id="password" required>
    <br>
    <label for="dob">Date of Birth</label>
    <input type="text" name="USER_DOB" id="dob" required>
    <br>
    <input type="submit" value="Add User">

  </form>


  <%- include('partials/footer') %>


</body>
</html>
